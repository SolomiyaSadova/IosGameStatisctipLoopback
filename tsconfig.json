{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./node_modules/@loopback/build/config/tsconfig.common.json",
  "include": ["src"],
  "compilerOptions": {
    "lib": ["es2019"],
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules/**",
    "**/*.d.ts"
  ]
}
